{
    "name": "cftp/babble",
    "description": "A WordPress plugin to handle translating content into a variety of languages.",
    "license": "GPL-2.0+",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Code For The People",
            "email": "hello@codeforthepeople.com"
        }
    ],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/humanmade/Goutte.git"
		}
	],
    "require-dev" : {
        "phpunit/phpunit": ">=3.7@stable"
    },
    "require": {
        "composer/installers": "~1.0"
    },
    "require-dev": {
    	"behat/behat": "~3.0",
        "behat/mink-extension": "~2.0",
        "behat/mink-goutte-driver": "~1.1",
        "behat/mink-selenium2-driver": "*",
        "johnbillion/wordpress-behat-extension": "0.1.2",
        "johnpbloch/wordpress": ">=4.2.0@stable",
        "phpunit/phpunit": ">=3.7@stable",
        "wp-cli/wp-cli": "*"
    },
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress"
    }
}
